.messages__chat{data: {id: message.id}}
  .messages__chat--user
    = message.user.name
  .messages__chat--date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__chat--message
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'messages__message--image' if message.image.present?